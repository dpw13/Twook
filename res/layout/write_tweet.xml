<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="760px" android:background="#FFFFFFFF">
	<!-- this Frame is used merely to block out the eink-display -->
	<EditText android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:hint="Enter Tweet"
		android:inputType="text" android:width="600px" android:id="@+id/tweet_message"
		android:textColor="#000000"></EditText>





	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tweet_length"
		android:textColor="#000000" android:text="Characters remaining:  140"></TextView>
</LinearLayout>
